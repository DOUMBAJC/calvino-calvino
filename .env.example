# Configuration de l'application
APP_NAME="Calvino"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en

# Configuration de la base de donn√©es
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=calvino_db
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Configuration JWT
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_TTL=86400

# Configuration de l'API
API_VERSION=1.0
API_PREFIX=/api

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_HEADERS="Content-Type, Authorization, X-Requested-With, Accept, Origin, X-Auth-Token"
CORS_ALLOWED_METHODS="GET, POST, PUT, DELETE, PATCH, OPTIONS"
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=true

# Configuration des sessions
USE_SESSIONS=true
SESSION_LIFETIME=120
