{
    "name": "calvino/calvino",
    "description": "Un mini-framework PHP moderne pour cr√©er rapidement des APIs REST avec authentification JWT, ORM, migrations et CLI",
    "type": "library",
    "keywords": [
        "framework",
        "php",
        "api",
        "rest",
        "jwt",
        "orm",
        "migrations",
        "cli",
        "router"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "DOUMBA Jean Calvain",
            "email": "jeancalvaindoumba07@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Calvino\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Calvino\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/calvino"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "calvino": "php bin/calvino"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
