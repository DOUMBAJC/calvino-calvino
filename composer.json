{
    "name": "calvino/calvino",
    "description": "Squelette de projet pour le framework Calvino",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../calvino-framework"
        }
    ],
    "require": {
        "php": "^8.2",
        "calvino/framework": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "calvino": "php vendor/bin/calvino",
        "dev": "php vendor/bin/calvino serve"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
